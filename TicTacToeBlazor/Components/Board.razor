<div class="board">
    @for (int i = 0; i < 9; i++)
    {
        int index = i;
        <Square @key=index value=game.GetCell(index) ClickHandler="@(() => HandleClick(index))" />
    }
</div>


@code {
    [Parameter, EditorRequired] public TicTacToeGame game { get; set;} = null!;

    [Parameter] public EventCallback<int> ClickHandler { get; set; }

    private void HandleClick(int i)
    {
        ClickHandler.InvokeAsync(i);
    }
}